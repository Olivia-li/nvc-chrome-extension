{
  "manifest_version": 3,
  "name": "NVC-ify",
  "version": "1.0",
  "icons": { "128": "icon_128.png" },
  "description": "A plain text description",
  "permissions": ["activeTab", "contentSettings"],
  "host_permissions": ["https://nvc-api.herokuapp.com/"],
  "content_scripts": [
    {
      "js": ["index.js"],
      "matches": ["*://www.messenger.com/*"],
      "run_at": "document_idle"
    }
  ]
}
